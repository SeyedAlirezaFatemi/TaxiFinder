<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
            android:id="@+id/widget_groupLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/widget_top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                    android:id="@+id/widget_brandName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="j dfgjdjfg dfjgjkdfjg "
                    android:layout_marginLeft="54dp"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/gray_dark"
                    android:textSize="12sp"/>

            <TextView
                    android:id="@+id/widget_fullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:layout_alignParentRight="true"
                    android:text="حسین علیزاده"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:layout_marginLeft="8dp"
                    android:ellipsize="end"
                    android:layout_toRightOf="@id/widget_brandName"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>


        </RelativeLayout>

        <TextView
                android:id="@+id/widget_phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_below="@id/widget_top_layout"
                android:textColor="@color/gray_dark"
                android:textSize="10sp"/>

    </RelativeLayout>

</RelativeLayout>